@model IEnumerable<TotalSquashNext.Models.UserLadder>

@{
    ViewBag.Title = "All Users Registered for Ladders";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Register For Ladder", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ladder.ladderDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.username)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ladder.ladderDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.username)
        </td>
        <td>
            <a href="mailto:" +item.user.email>Contact</a>
        </td>
@{if ((((TotalSquashNext.Models.User)Session["currentUser"]).id == item.userId))
{
    <td>
        @Html.ActionLink("Remove From Ladder", "Delete", new { id = item.userId, ladderId=item.ladderId })
    </td>
}
}
    </tr>
}

</table>
