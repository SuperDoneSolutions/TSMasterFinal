@model TotalSquashNext.Models.Match

@{
    ViewBag.Title = "Challenge Another Player";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-inline">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <p>You want to challenge :<b> @ViewBag.userToChallenge </b></p>
            <div class="col-md-10">
                
                

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model=>model.bookingNumber, "Choose the booking when you'd like to challenge the user: ")
            <div class="col-md-10">
                @Html.DropDownList("bookingNumber", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.bookingNumber, "", new { @class = "text-danger" })
                
            </div>
        </div>

            <br />
        <p><a style="text-decoration:underline;"href="mailto:@(((TotalSquashNext.Models.User)Session["userToChallenge"]).emailAddress)">Click here</a> to email the user to let them know you're going to challenge them!</p>
        <p>You must have a court booked to challenge a user. <a style="text-decoration:underline;" href="@Url.Action("Create","Booking")">Click to book a court!</a></p>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Challenge" class="btn btn-default" />
            </div>
        </div>
</div>
}

