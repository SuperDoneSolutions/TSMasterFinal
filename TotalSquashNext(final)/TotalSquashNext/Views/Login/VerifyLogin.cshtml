@model TotalSquashNext.Models.User
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel=icon href="~/Images/totalSquash-favicon.ico" type="image/png">
    <title>Total Squash</title>
    <meta name="viewport" content="width=device-width, initial-scale=">
    <meta name="layout" content="main" />
    <script type="text/javascript" src="http://www.google.com/jsapi"></script>
    <script src="../../Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <link href="../../Content/customize-template.css" type="text/css" media="screen, projection" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" type="text/css" media="screen, projection" rel="stylesheet" />
    <script type="text/javascript" src="~/js/jquery/jquery-1.11.2.min.js"></script>
    <script type="text/javascript" src="~/js/jquery/moment.js"></script>
    <script type="text/javascript" src="~/js/bootstrap/bootstrap-transition.js"></script>
    <script type="text/javascript" src="~/js/bootstrap/bootstrap-collapse.js"></script>
    <script type="text/javascript" src="~/js/bootstrap/bootstrap.js"></script>
    <script type="text/javascript" src="~/js/bootstrap/bootstrap-datepicker.js"></script>
    <script type="text/javascript" src="http://www.google.com/jsapi"></script>
    <script src="../../js/jquery/jquery-1.8.2.min.js" type="text/javascript"></script>
    <link href="~/Content/customize-template.css" type="text/css" media="screen, projection" rel="stylesheet" />
    <link href="~/Content/Site.css" type="text/css" media="screen, projection" rel="stylesheet" />
    <style>
    </style>
    @{
        ViewBag.Title = "Total Squash";
    }

</head>

<body>

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div id="container row">
                <div class="col-xs-6" >
                    <a href="@Url.Action("VerifyLogin","Login")" class="brand"><img src="~/Images/TSheader02.png" style="padding-top: 10px;" /></a>
                </div>
                <div class="col-md-6">



                    <form method="post" class="login">

                        @Html.AntiForgeryToken()
                        <div class="col-md-4">
                            <label style="font-size:12px; color:#DFDFDF;">Email Address</label>
                            @Html.TextBoxFor(m => m.emailAddress, new { @class = "form-control", @style = "width:13em;" })
                        </div>
                        <div class="col-md-8">
                            <label style="font-size:12px; color:#DFDFDF;">Password</label>
                            @Html.PasswordFor(m => m.password, new { @class = "form-control", @style = "width:13em;" })

                            <input type="submit" value="Log in" class="btn-xs" style="font-size:10px;" />

                            <input type="button" value="Register" onclick="location.href='@Url.Action("Create","Users")'" style="font-size:10px;" class="btn-xs" />


                            <br />
                            <a style="font-size:10px; color:#DFDFDF;" href="@Url.Action("ForgotPasswordSecurityCheck","Login")">Forgot your password?</a>

                        </div>
                    </form> 


                    </div>

                </div>
            </div>
        </div>
                        <div style="margin:auto; display:block;">
                            <br>
                            <br>
                            <br>
                            <br>
                            <p style="text-align:center;"><b>@Html.Raw(@TempData["message"])</b></p> 
                            <div class="box">
                                
                                <img style="margin:auto; display:block;" src="../../Images/totalSquashLogo.png">
                                <br />

                            </div>
                            <br>
                            <br>
                            <br />
                            <br>

                        </div>
                        <footer class="application-footer">
                            <div class="container">
                                <br />
                                <br />
                                <p style="font-size:1.15em;">Total Squash</p>
                                <div class="disclaimer">
                                    <a style="font-size:1em;color:#dfdfdf" href="mailto:superdonesolutions@gmail.com">Contact Us</a>
                                    <p style="font-size:1em;">Copyright © Super Done Solutions 2015</p>
                                </div>
                            </div>
                        </footer>
                        <div style="background-color:#2B2B2B; height:68px;">

                        </div>
                    </body>
                </html>
