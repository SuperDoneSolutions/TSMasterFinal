@model TotalSquashNext.Models.Booking

@{
    ViewBag.Title = "Alternate Courts Available On: "+@Session["datePicked"].ToString();
}

<h2>@ViewBag.Title</h2>

<html>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.courtId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("courtId", new SelectList(ViewBag.alternateCourts, "courtId"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.courtId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

     </div>
        }
</body>
</html>